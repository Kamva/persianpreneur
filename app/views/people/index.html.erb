<% title "PersianPreneur" %>

<div class="main">
  <section id="main-section">
    <div class="row">
      <div class="small-10 columns left main-text">
        <p>
          <h1 id="title">
            Persianpreneur  
          </h1>
          <h4 id="title-description">
            /ˈpərZHənprəˈno͝or, -ˈnər/  noun
          </h4>
          <h5>
            An Iranian entrepreneur making the world a better place by solving one problem at a time. 
          </h5>
          <h5>
            They are hardworking smart people. You can find a list of them below.
          </h5>          
        </p>
        <%= link_to "Add Yourself To The List", "#", data: {:'reveal-id' => 'addPersonModal'}, class: ['button small radius'] %>
        <div id="addPersonModal" class="reveal-modal" data-reveal>
          <% @person = Person.new %>
          <%= render partial: '/people/form' %>
          <a class="close-reveal-modal">&#215;</a>
        </div>
      </div>
    <div class="side-menu">
      <div class="small-2 culomns right">
        <ul class="side-nav">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="http://twitter.com/persianpreneur">Twitter</a></li>
        </ul>
      </div>
    </div>
    </div>
  </section>
  <section id="content-section">
    <ul class="small-block-grid-3 medium-block-grid-5 large-block-grid-10">
      <% @people.each do |person| %>
              <li class="tooltip-person">
                <div class="image-wrapper">
                  <%= image_tag(person.profile_picture.thumb.url) %>
                </div>
                <div class="hidden tipcontent">
                  <div class="links">              
                    <% unless person.website.blank? %>
                      <%= link_to "", person.website, :class => ['fa', 'fa-home', 'fa-lg'] %>
                    <% end %>
                    <% unless person.linkedin_profile.blank? %>
                      <%= link_to "", "#{person.linkedin_profile}", :class => ['fa', 'fa-linkedin'  , 'fa-lg'] %>
                    <% end %>
                    <% unless person.twitter_handle.blank? %>
                      <%= link_to "", "http://twitter.com/#{person.twitter_handle}", :class => ['fa', 'fa-twitter', 'fa-lg'] %>
                    <% end %>
                  </div>
                  <div class="full-name">
                    <%= person.full_name + (person.birth_date.blank? ? "" : ", ") %>
                    <% unless person.birth_date.blank? %>
                      <%= Time.now.utc.to_date.year - person.birth_date.year - (person.birth_date.to_date.change(:year => Time.now.utc.to_date.year) > Time.now.utc.to_date ? 1 : 0) %> 
                    <% end %>
                  </div>
                  <div class="description">
                    <%= person.description %>
                    <br/><p><%= person.location %></p>
                  </div>
                </div>
              </li>
      <% end %>
    </ul>
  </section>
</div>